<%- include('include/_header') %>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All Data</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Edit Data</h2>
            <span class="text-light">Form for edit data</span>
        </div>

        <form method="POST" id="update_data">
            <div class="new_data"></div>
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="name" value="<%= user.name %>">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="<%= user.email%>">
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn_submit text-dark update">Save</button>
                </div>
        </form>
        
    </div>
</main>

<%- include('include/_footer') %>